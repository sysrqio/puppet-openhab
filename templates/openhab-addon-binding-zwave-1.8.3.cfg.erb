################################ Z-Wave  Binding ######################################
#
# The Z-Wave controller port. Valid values are e.g. COM1 for Windows and /dev/ttyS0 or
# /dev/ttyUSB0 for Linux
#zwave:port=
<% if @configuration['port'] -%>
zwave:port=<%= @configuration['port']  %>
<% end -%>

# Z-Wave nightly heal time. This is the hour (eg 2AM) at which the automatic nightly
# network heal will be performed.
#zwave:healtime=2
<% if @configuration['healtime'] -%>
zwave:healtime=<%= @configuration['healtime']  %>
<% end -%>

<% if @configuration['mastercontroller'] -%>
zwave:masterController=<%= @configuration['mastercontroller']  %>
<% end -%>

<% if @configuration['setsuc'] -%>
zwave:setSUC=<%= @configuration['setsuc']  %>
<% end -%>

<% if @configuration['softreset'] -%>
zwave:softReset=<%= @configuration['softreset']  %>
<% end -%>
